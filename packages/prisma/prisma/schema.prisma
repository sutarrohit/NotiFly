// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  username      String
  name          String
  email         String
  emailVerified DateTime?
  password      String
  avatar        String?

  @@unique([email])
  @@unique([username])
  @@unique([username, email])
  @@index([username])
  @@index([email])
  @@index([id])
  @@map(name: "users")
}
